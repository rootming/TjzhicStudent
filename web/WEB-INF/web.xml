<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--超时设置-->
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    
    <listener>
        <listener-class>rootming.tjzhic.listener.SessionListener</listener-class>
    </listener>

    <!--主页设置-->
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>

    <!--404页面设置-->
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <!--Login handle-->
    <servlet>
        <servlet-name>LoginHandle</servlet-name>
        <servlet-class>rootming.tjzhic.handle.LoginHandle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginHandle</servlet-name>
        <url-pattern>/LoginHandle</url-pattern>
    </servlet-mapping>

    <!--Logout handle-->
    <servlet>
        <servlet-name>LogoutHandle</servlet-name>
        <servlet-class>rootming.tjzhic.handle.LogoutHandle</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutHandle</servlet-name>
        <url-pattern>/LogoutHandle</url-pattern>
    </servlet-mapping>


    <!--Register Handle-->

    <servlet>
        <servlet-name>RegisterHandle</servlet-name>
        <servlet-class>rootming.tjzhic.handle.RegisterHandle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterHandle</servlet-name>
        <url-pattern>/RegisterHandle</url-pattern>
    </servlet-mapping>

    <!--Data Handle-->
    <servlet>
        <servlet-name>DataHandle</servlet-name>
        <servlet-class>rootming.tjzhic.handle.DataHandle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataHandle</servlet-name>
        <url-pattern>/DataHandle</url-pattern>
    </servlet-mapping>

    <!--API Handle-->
    <servlet>
        <servlet-name>APIHandle</servlet-name>
        <servlet-class>rootming.tjzhic.handle.APIHandle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>APIHandle</servlet-name>
        <url-pattern>/APIHandle</url-pattern>
    </servlet-mapping>


    <!--SQL注入过滤器-->
    <filter>
        <filter-name>SQLFilter</filter-name>
        <filter-class>rootming.tjzhic.filter.SQLFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SQLFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--设置编码-->
    <filter>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>rootming.tjzhic.filter.EncodeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*/*</url-pattern>
    </filter-mapping>

    <!--console页面登陆检查-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>rootming.tjzhic.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/console.jsp</url-pattern>
    </filter-mapping>

    <!--JSON获取检查-->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>DataHandle</servlet-name>
    </filter-mapping>

    <!--API检查-->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>APIHandle</servlet-name>
    </filter-mapping>

    <!--页面访问检查-->
    <filter>
        <filter-name>PageFilter</filter-name>
        <filter-class>rootming.tjzhic.filter.PageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PageFilter</filter-name>
        <url-pattern>/pages/*</url-pattern>
    </filter-mapping>





</web-app>